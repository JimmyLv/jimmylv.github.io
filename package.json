{
  "name": "jimmylv.github.io",
  "version": "1.0.0",
  "description": "Jimmy's articles.",
  "main": "index.js",
  "repository": "git@github.com:JimmyLv/jimmylv.github.io.git",
  "author": "JimmyLv <jimmy.jinglv@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "format": "prettier --write **/*.md",
    "lint": "textlint **/*.md",
    "lint:fix": "yarn lint --fix",
    "ppt": "nodeppt generate ./演讲 ./slides -a && hs slides"
  },
  "lint-staged": {
    "*.md": [
      "textlint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^7.3.0",
    "prettier": "2.0.2",
    "pretty-quick": "2.0.2",
    "textlint": "11.6.2",
    "textlint-rule-ja-space-between-half-and-full-width": "2.0.1",
    "textlint-rule-no-todo": "2.0.1"
  }
}
